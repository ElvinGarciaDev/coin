                      <select name="category" class="form-control" aria-label="Default select example" placeholder="Choose An Expense Category">
                        <option value="Rent" name="Rent">Rent</option>
                        <option value="Utilities" name="Utilities">Utilities</option>
                        <option value="Food" name="Food">Food</option>
                        <option value="Transportation" name="Transportation">Transportation</option>
                        <option value="Miscellaneous" name="Miscellaneous">Miscellaneous</option>
                      </select>
